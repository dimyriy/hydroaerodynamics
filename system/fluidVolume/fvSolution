// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "(rho|G)"
    {
        solver          PCG;
        tolerance       1e-12;
        relTol          0;
    }

    p
    {
        solver           GAMG;
        tolerance        1e-8;
        relTol           0;
        nPreSweeps       0;
        nPostSweeps      1;
        smoother         DICGaussSeidel;
        cacheAgglomeration true;
        nCellsInCoarsestLevel 10;
        agglomerator     faceAreaPair;
        mergeLevels      1;
        maxIter          100;
    }
/*
    p
    {
        solver PCG;
        preconditioner DIC;
        tolerance 1e-6;
        relTol 0;
        maxIter 20;
    }*/
    pFinal
    {
        $p;
        tolerance 1e-8;
        maxIter 100;
    }
    /*
    "(U|Yj)"
    {
        solver smoothSolver;
        smoother      DILUGaussSeidel;
        nSweeps       20;
        tolerance     1e-7;
        relTol        0;
        maxIter       20;
    }*/
    "(U|Yj|k|omega|R)"
    {
        solver GAMG;
        smoother GaussSeidel;
        nPreSweeps       0;
        nPostSweeps      1;
        tolerance        1e-9;
        relTol           0;
        cacheAgglomeration true;
        nCellsInCoarsestLevel 10;
        agglomerator     faceAreaPair;
        mergeLevels      1;
        maxIter          100;
    }
    "(h|hFinal)"
    {
        solver smoothSolver;
        smoother      GaussSeidel;
        nSweeps       20;
        tolerance     1e-7;
        relTol        0;
        maxIter       5;
    
    }
    /*
    "(k|omega)"
    {
        solver PBiCG;
        preconditioner DILU;
        tolerance 1e-8;
        relTol 0;
        maxIter 1000;
    }
    */
}

